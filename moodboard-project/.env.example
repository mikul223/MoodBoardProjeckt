# Токен бота от @BotFather
BOT_TOKEN=telegram_bot_token_here


# Имя пользователя PostgreSQL
POSTGRES_USER=postgres_username
# Пароль пользователя PostgreSQL
POSTGRES_PASSWORD=secure_postgres_password
# Название базы данных
POSTGRES_DB=moodboard
# Полный URL для подключения к базе данных
DATABASE_URL=postgresql://username:password@host:5432/database


# Секретный ключ для шифрования
SECRET_KEY=generate_a_secure_random_hex_string
# Алгоритм для JWT токенов
JWT_ALGORITHM=HS256
# Время жизни access токена в минутах
ACCESS_TOKEN_EXPIRE_MINUTES=1440


# URL внутреннего API сервиса
API_URL=http://api:8000
# URL веб-интерфейса (Streamlit)
WEB_URL=http://server_ip:8501
# Базовый URL приложения
BASE_URL=http://server_ip


# URL для подключения к Redis
REDIS_URL=redis://redis:6379


# Директория для загрузки файлов
UPLOADS_DIR=/app/uploads
# Максимальный размер загружаемого файла в байтах
MAX_UPLOAD_SIZE=10485760
# Разрешенные типы файлов
ALLOWED_FILE_TYPES=image,text


# Включить защиту от SQL-инъекций
ENABLE_SQL_INJECTION_PROTECTION=true
# Включить валидацию входных данных
ENABLE_INPUT_VALIDATION=true
# Блокировать подозрительные запросы
BLOCK_SUSPICIOUS_REQUESTS=true


# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Разрешенные домены для CORS
CORS_ORIGINS=https://server_ip